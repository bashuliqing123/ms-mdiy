<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingsoft.mdiy.dao.IModelTemplateDao">
	<resultMap id="resultMap" type="com.mingsoft.mdiy.entity.ModelTemplateEntity">
		<id column="page_id" property="modelTemplateId" /><!--自增长id -->
		<result column="page_model_id" property="modelTemplateId" /><!--模块id -->
		<result column="page_app_id" property="modelTemplateAppId" /><!--应用id -->
		<result column="page_path" property="modelTemplatePath" /><!--自定义页面绑定模板的路径 -->
		<result column="page_title" property="modelTemplateTitle" /><!--自定义页面标题 -->
		<result column="page_key" property="modelTemplateKey" /><!--自定义页面访问路径 -->
	</resultMap>
	
	<insert id="saveEntity">
		insert into mdiy_page
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="modelTemplatePath != null">page_path,</if>
			<if test="modelTemplateTitle != null">page_title,</if>
			<if test="modelTemplateKey != null">page_key,</if>
			<if test="modelTemplateAppId != null">page_app_id,</if>
			<if test="modelTemplateModelId != null">page_model_id,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="modelTemplatePath != null">#{modelTemplatePath},</if>
			<if test="modelTemplateTitle != null">#{modelTemplateTitle},</if>
			<if test="modelTemplateKey != null">#{modelTemplateKey},</if>
			<if test="modelTemplateAppId != null">#{modelTemplateAppId},</if>
			<if test="modelTemplateModelId != null">#{modelTemplateModelId},</if>
		</trim>
	</insert>
	
	<select id="getEntityByAppIdAndKey" resultMap="resultMap">
		select *
		from mdiy_page where page_app_id=#{appId} and page_key =#{key}
	</select>
	<select id="queryByAppId" resultMap="resultMap">
		select * from mdiy_page
		where page_app_id=#{appId} order by page_id desc
	</select>
	<select id="getEntity" resultMap="resultMap" parameterType="int">
		select * from mdiy_page where page_id=#{id}
	</select>
	<delete id="deleteEntity" parameterType="int">
		delete from
		mdiy_page
		where
		page_id = #{id}
	</delete>
	<update id="updateEntity" parameterType="com.mingsoft.mdiy.entity.ModelTemplateEntity">
		update mdiy_page
		<set>
			<if test="modelTemplateTitle != null">page_title=#{modelTemplateTitle},</if>
			<if test="modelTemplatePath != null">page_path=#{modelTemplatePath},</if>
			<if test="modelTemplateKey != null">page_key=#{modelTemplateKey},</if>
		</set>
		where page_id = #{modelTemplateId}
	</update>
</mapper>